CXX = g++
CXXFLAGS = -ansi -pedantic -Wall -W -Wconversion -Wshadow -Wcast-qual -Wwrite-strings -std=c++0x -DLINUX
TARGET = parallel_image
BUILD_PATH = build
INCLUDE_PATH = -I include -I /usr/local/cuda/include
INCLUDE_PATH_WORK =-I include -I /apps/Linux64/cuda/cuda-6.0.37/include -I /tools/SITE/rnd/include/tbb/tbb-4.1/
SRC_PATH= src
CUDA_LIB = -L /usr/local/cuda/lib -lcudadevrt
CUDA_LIB_WORK = -L /apps/Linux64/cuda/cuda-6.0.37/lib  -L /tools/SITE/rnd/lib/Linux64/tbb/tbb-4.1/


CUDA_PATH = "/apps/Linux64/cuda/cuda-6.0.37"
NVCC = $(CUDA_PATH)/bin/nvcc
CUDA_FLAGS = -arch=sm_35

vpath %.cpp src
vpath %.cu src
# VPATH = src
 
