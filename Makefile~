.SUFFIXES: .cpp .o .cu .h

all: main.o bitmap.o bw_filter.o blur_filter.o stancil.o gaussian_stancil.o bw_kernel.cu.o blur_kernel.cu.o
	$(CXX)  $? -o $(BUILD_PATH)/$(TARGET) -L  /apps/Linux64/cuda/cuda-6.0.37/lib -L /usr/local/lib $(CUDA_LIB_WORK)  -ltbb-gcc446  -lcudart


%.o: %.cpp
	$(CXX) $(CXXFLAGS)  $(INCLUDE_PATH_WORK) -c $<

%.cu.o: %.cu
	$(NVCC) $(CUDA_FLAGS) -c $< -o $@

run: clean all
	$(BUILD_PATH)/$(TARGET) 

clean:
	rm -f $(BUILD_PATH)/*.o $(BUILD_PATH)/$(TARGET)* *.o

doc:
	rm -f -r ./doc/html
	doxygen ./Doxyfile
	google-chrome ./doc/html/index.html

.PHONY: all run clean
